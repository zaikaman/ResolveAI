# Application
ENV=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_BASE_URL=https://your-openai-endpoint-here
OPENAI_MODEL=gemini-2.5-flash-lite-nothinking

# Opik (Comet ML)
OPIK_API_KEY=your-opik-api-key-here
OPIK_WORKSPACE=your-workspace-name
OPIK_PROJECT=resolveai-debt-coach

# Security & JWT
SECRET_KEY=your-secret-key-for-app-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7
ENCRYPTION_KEY=your-32-byte-base64-encoded-encryption-key

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Database
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
